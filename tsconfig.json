{
  "compilerOptions": {
    /* ----------------------------------------
       ðŸš€ Base Configuration
    ---------------------------------------- */
    "target": "ES2022",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,

    /* ----------------------------------------
       ðŸ“¦ Modules & JSX
    ---------------------------------------- */
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "react-jsx",

    /* ----------------------------------------
       ðŸ§  Type Definitions
    ---------------------------------------- */
    "types": ["node", "react", "react-dom", "@types/jest"],
    "incremental": true,
    "baseUrl": ".",

    /* ----------------------------------------
       ðŸ§­ Path Aliases
    ---------------------------------------- */
    "paths": {
      "@/*": ["*"],
      "@/app/*": ["app/*"],
      "@/components/*": ["components/*"],
      "@/lib/*": ["lib/*"],
      "@/styles/*": ["styles/*"],
      "@/types/*": ["types/*"],
      "@/hooks/*": ["hooks/*"]
    },

    /* ----------------------------------------
       ðŸ§© Next.js Plugin
    ---------------------------------------- */
    "plugins": [{ "name": "next" }],

    /* ----------------------------------------
       ðŸ§± Build Optimization
    ---------------------------------------- */
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitOverride": true,
    "noUnusedLocals": true,
    "noUnusedParameters": false
  },

  /* ----------------------------------------
     ðŸ“‚ Included Files
  ---------------------------------------- */
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts"
  ],

  /* ----------------------------------------
     ðŸš« Excluded Files
  ---------------------------------------- */
  "exclude": ["node_modules", "dist", "build", ".next/cache"]
}
